doctype html
html
    head
        link(rel='stylesheet', href='/css/bootstrap.css')
        link(rel='stylesheet', href='/css/index.css')
        script(type='text/javascript', src='/js/lodash.min.js')
        script(type='text/javascript', src='/js/jquery.js')
        script(type='text/javascript', src='/js/collapse.js')
        script(type='text/javascript', src='/js/bootstrap.min.js')
        script(type='text/javascript', src='/js/moment.min.js')

        link(rel='stylesheet', href='/js/local/revision.css')
        script(type='text/javascript', src='/js/local/revision.js')

        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(name="keywords" content="facebook tracking exposed")
        meta(property="og:title" content="facebook.tracking.exposed - HTML parsing revision")
        meta(property="og:type" content="website")
        meta(property="og:description" content="Facebook Tracking Exposed perform parsing of HTML snippet, we need a collaborative revision to sort if out if we are extracting information properly")
        meta(property="og:url" content="https://facebook.tracking.exposed/revision")
        meta(property="og:image" content="https://facebook.tracking.exposed/images/fbtrex_logo-400x400.png")
        meta(property="og:image:width" content="400")
        meta(property="og:image:height" content="400")
        title facebook tracking exposed - HTML revision page

        // remind - loadsnippet is the legacy, loadmetadata is the new one 
    body(onload="loadsnippet('#metadest', '#render'); loadmetadata('#metadata', '#errors'); ")

        include header
        include navbar

        .container-fluid
            .col-md-1
            .col-md-4
                div.infoblock
                    h3
                        a Metadata extracted
                    div.metadata(id='metadata')

                div.infoblock
                    h3
                        a Error in extraction
                    div.metadata(id='errors')

                div.infoblock
                    h3
                        a(id="bymeta") (old) Metadata extracted
                    div.metadata(id='metadest')


            .col-md-1
            .col-md-4.infoblock
                h3
                    a(id="bysnippet") The user saw this
                div.snippet(id='render')

