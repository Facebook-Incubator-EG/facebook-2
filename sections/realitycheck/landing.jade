doctype html
html
    head
        link(href='/js/local/EB+Garamond-Font.css', rel='stylesheet')
        link(href='/js/local/realitycheck.css', rel='stylesheet')
        link(rel='stylesheet', type='text/css', href='/css/datatables.min.css')
