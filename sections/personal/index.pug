doctype html
html
  head
    title fbTREX, data summary 

    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="keywords" content="facebook tracking exposed")
    meta(property="og:title" content="fbTREX, your submitted data")
    meta(property="og:type" content="website")
    meta(property="og:description" content="Invidual page, your information diet is here. filter, sort, download the data Facebook sent to you")
    meta(property="og:url" content="https://facebook.tracking.exposed")
    meta(property="og:image" content="https://facebook.tracking.exposed/images/fbtrex_logo-400x400.png")
    meta(property="og:image:width" content="400")
    meta(property="og:image:height" content="400")

    link(rel='stylesheet', type='text/css', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/index.css')
    link(rel='stylesheet', href='/css/summary.css')

    script(type='text/javascript', src='/js/jquery.js')
    script(type='text/javascript', src='/js/collapse.js')
    script(type='text/javascript', src='/js/bootstrap.min.js')
    script(type='text/javascript', src='/js/lodash.min.js')
    script(type='text/javascript', src='/js/isotope.pkgd.min.js')
    script(type='text/javascript', src='/js/moment.min.js')

    script(type='text/javascript', charset='utf8', src='/js/local/summary.js')

  body(onload="initializeSummary()")

    include header

    h1.center data summary
    .d-flex.justify-content-center.btn-groups
        button(type="button" class="btn btn-light" onclick="filterBy()")
          | Show all

        div(class="btn-group" role="group")
          button(type="button" class="btn btn-secondary" onclick="filterBy('.posts')")
            | Posts
          button(type="button" class="btn btn-success" onclick="filterBy('.photo')")
            | Pictures
          button(type="button" class="btn btn-primary" onclick="filterBy('.videos')")
            | Videos
          button(type="button" class="btn btn-warning" onclick="filterBy('.groups')")
            | Groups
          button(type="button" class="btn btn-info" onclick="filterBy('.events')")
            | Events

        div(class="btn-group" role="group")
          button(type="button" class="btn btn-light" onclick="sortBy('date')")
            | Date
          button(type="button" class="btn btn-light" onclick="sortBy('author')")
            | Author
          button(type="button" class="btn btn-light" onclick="sortBy('type')")
            | Type
          button(type="button" class="btn btn-light" onclick="sortBy()")
            | Original

        div(class="btn-group" role="group")
          button(type="button" class="btn btn-default" onclick="downloadCSV()") download .csv

    #summary.grid
      // width of .grid-sizer used for columnWidth
      .grid-sizer

