doctype html
html
  head
    link(rel='stylesheet', type='text/css', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/index.css')
    link(rel='stylesheet', href='/css/personal.css')

    script(type='text/javascript', src='/js/jquery.js')
    script(type='text/javascript', src='/js/collapse.js')
    script(type='text/javascript', src='/js/bootstrap.min.js')
    script(type='text/javascript', src='/js/lodash.min.js')
    script(type='text/javascript', src='/js/d3.min.js')
    script(type='text/javascript', src='/js/c3.min.js')
    script(type='text/javascript', src='/js/moment.min.js')

    script(type='text/javascript', charset='utf8', src='/js/local/personal.js')

    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="keywords" content="facebook tracking exposed")
    meta(property="og:title" content="RealityCheck - facebook.tracking.exposed")
    meta(property="og:type" content="website")
    meta(property="og:description" content="This is the personal page where users can see their information diet, download CSV, know more about the project")
    meta(property="og:url" content="https://facebook.tracking.exposed")
    meta(property="og:image" content="https://facebook.tracking.exposed/images/fbtrex_logo-400x400.png")
    meta(property="og:image:width" content="400")
    meta(property="og:image:height" content="400")

    title facebook.tracking.exposed RealityCheck 

  body(onload="initialize();")

    include header

    div.container
      div.navbar-header
        button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#thenavbar" aria-expanded="false")
          span(id="sr-only") Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar

      div.collapse.navbar-collapse(id="thenavbar")
        ul.nav.navbar-nav.navbar-left
          li.presentation
            a.switch#landing.click
              span.glyphicon.glyphicon-picture
          li.presentation
            a.switch#data.click
              span.glyphicon.glyphicon-user
              |  Your data
          li.presentation
            a.switch#diet.click
              span.glyphicon.glyphicon-grain
              |  Information diet
          li.presentation
            a.switch#csv.click
              span.glyphicon.glyphicon-cog
              |  Export and reuse
        ul.nav.navbar-nav.navbar-right.black
          li.presentation
            a.switch#knowmore.click Know more
          li
            a(href='/' alt='return to project homepage')
              span.glyphicon.glyphicon-home
              | 
              span.glyphicon.glyphicon-log-out

    .container-fluid
      #loader
        h3 Loading…
        img(class="logo-background" src="/images/fbtrex_logo.svg")

    .container-fluid.whitebehind
      .pageSection#dietSection.hidden

        .container-fluid
          div.col-sm-4.infoblock.description
            p How much Facebook insists on you?
            small this is based on the last 20 days, address "
                a(id="repetitionInfo") repetition
                |"
          div.col-sm-4.infoblock.description
            p Details
            small know more on 
                a(id="metadataInfo") metadata attribution 
          div.col-sm-4.infoblock.description
            p Watch Facebook's guesses!
            small what if, you are only 
                a(id="candymetaphor") eating candies?

        .container-fluid
          div.col-sm-4.infoblock
            div#insist
          div.col-sm-4.infoblock
            div#middle-loader.hidden
                h3 Loading evidence…
                img(class="logo-background" src="/images/fbtrex_logo.svg")
            div#details
          div.col-sm-4.infoblock
            div#sources

    .container-fluid
      .pageSection#dataSection.hidden
        p These are the data you sent us so far:
        div#contributionBlock
        div#shiftContributionBlock(onclick="loadNextHTMLs('#contributionBlock');")
          b Load Next 100…

    .container-fluid
      .pageSection#csvSection.hidden
        include csv

    .container-fluid
      .pageSection#knowMoreSection.hidden
        include knowmore

