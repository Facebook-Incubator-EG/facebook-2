{
  "manifest_version": 2,

  "name": "Fbtrex",
  "description": "Facebook tracking exposed",
  "version": "1.0.0",

  "icons": {
      "16": "fbtrex16.png",
      "48": "fbtrex48.png",
      "128": "fbtrex128.png"
  },

  "browser_action": {
      "default_icon": "fbtrex16.png"
  },

  "permissions": [
    "tabs",
    "storage",
    "https://*.facebook.com/",
    "http://localhost:8001/"
  ],

  "background": {
      "scripts": ["./background.js"],
      "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],
      "js": ["./app.js"],
      "css": ["./styles.css"]
    }
  ]

}

