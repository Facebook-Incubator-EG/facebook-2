/*
 *  V A R I A B L E S
 */
$color-yellow-light = #ffffe0
$color-red = #fd5308
$color-red-light = #FD8854
$color-green = #66b032
$color-green-light = #A2F24C
$color-blue = #3c5a99
$color-blue-light = #5A87E5
$color-grey = #ccc
$color-grey-light = #e6e6e6
$color-grey-medium = #8C8C8C
$color-grey-dark = #4C4C4C
$color-white = #fefefe

$before(text)
  content: text
  color: $color-grey-medium
  font-weight: lighter
  position: absolute
  top: -30px
  width: 100%
  text-align: center
  text-transform: uppercase
  letter-spacing: 1px

.btn-groups
  margin-top: 48px
  margin-bottom: 24px

  > .btn-group:nth-child(2)
    margin: 0 16px
    &::before
      $before('Filter results')
  > .btn-group:last-child
    &::before
      $before('Sort by')

.grid
  display: block
  margin: 0 auto 32px
  width: 97.5%

  /* clear fix */
  &::after
    content: ''
    display: block
    clear: both

/* fluid 5 columns */
.grid-item, .grid-sizer
  width: 20%

.grid-item
  float: left
  padding: 12px
  transition: height .2s ease-out

  .content
    border-top-left-radius: 5px
    border-top-right-radius: 5px
    min-height: 158px

    .small
      display: inline-block
      font-size: 10px

    header
      background-color: transparent
      color: $color-grey-medium
      display: block
      font-size: 90%
      font-weight: light
      letter-spacing: 2px
      padding: 4px 8px
      text-align: center
      text-transform: uppercase

    .body
      background-color: $color-white
      flex-grow: 1
      padding: 8px 16px
      margin: 0 auto
      width: calc(100% - 2px)

      .date
        display: block
        color: $color-grey-medium
        margin-bottom: 8px

      .author
      .teaser
        hyphens: auto
        word-wrap: break-word

      .author
        color: $color-grey-dark
        font-size: 1.1em
        font-weight: bold
        line-height: 1.2
        margin-bottom: 6px

      p
        display: inline-block
        font-size: 15px
        line-height: 1.3

      a.text-link
        color: currentColor
        display: block
        font-size: 80%
        line-height: 1.2

    footer
      display: flex
      justify-content: space-between
      padding: 4px 16px
      color: $color-grey-medium

      span:not(.post-id)
        color: $color-grey-light

.grid-item--width2
  width: 40%
.grid-item--height2
  height: 400px
.grid-item--height-auto
  height: auto
