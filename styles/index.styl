
*
  margin 0
  padding 0
  box-sizing border-box

.left
  text-align left

.right
  text-align right

img
  max-width 100%
  max-height 100%

p
  font-size 1.3em

.center
  text-align center

p
  font-size 1.3em

.theinputfield
  width 70%
  font-size 1.4em

.buttonfield
  width 10%

.monospace
  font-family 'Source Code Pro', monospace
  margin 0

.propaganda
  padding-right 10%
  padding-left 10%
  padding-bottom 2%
  border-bottom #3b5999 0.7em solid

  h2
    border-left #3b5999 0.01em solid
    padding-left 0.1em

.polite-propaganda
  padding-right 10% 
  padding-left 10%

  h2
    border-left #3b5999 0.01em solid
    padding-left 0.1em

.simpletext
  padding-right 10%
  padding-left 10%
  padding-bottom 1%

.smaller
  font-weight bold
  font-size 0.75em
  color darkgrey

.link
  padding 3px
  font-size 0.9em

.right-link
  border-right 8%
  text-align right
  background #E8FFC2
  color #3b59999
  a
    color #3b59999

.left-link
  text-align left
  border-left 8%
  background #DCEFE8

.larger-content
  margin 30px auto

.main-content
  margin 50px auto
  max-width 600px
  p
    line-height 1.6

.footer
  margin 50px auto
  max-width 600px
  border-top 1px solid #444
  padding 20px 0
  p
    color #444
    font-size 12px

.long
  font-size 0.8em

.big
  padding-top 10%
  font-size 3em

.white
  color white

.blue
  color #3c5a99

.orange
  color #fd5308

.green
  color #66b032

.italic
  font-style italic

.examplelist
  margin-left 10%
  margin-right 10%
  p
    size: 1.3em
  a
    color darkblue
  a:hover
    color red
    font-style normal

.exampleentry
  background-color paleyellow
  padding 5%
  width 100%

.team-name
  font-size 2em

.team-role
  color grey

.team-twitter
  font-size 0.9em

.team-github
  font-size 0.9em

.teamblock
  font-size 0.7em
  margin-top 1em

/* team members */
.img-circle
  border-radius 50%
  margin 0 50%
  transform translate(-50%,0%)

/* unordered list */
.fb--icon-list
  list-style-image url("/images/fbtrex16.png")
  font-size 1.3em



